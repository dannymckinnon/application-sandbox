{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
